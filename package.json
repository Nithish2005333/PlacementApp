{
  "name": "placement-app",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "nodemon",
    "start": "node server/index.js",
    "client:install": "cd client && npm ci --include=dev || npm install --include=dev",
    "client:dev": "cd client && npm run dev",
    "client:build": "cd client && npm run build",
    "client:preview": "cd client && npm run preview",
    "build": "npm run client:install && npm run client:build",
    "postinstall": "npm run client:install && npm run client:build"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.41.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.18.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "multer-storage-cloudinary": "^4.0.0",
    "nodemailer": "^7.0.6",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "markdown-pdf": "^11.0.0",
    "marked": "^16.2.1",
    "nodemon": "^3.1.4",
    "puppeteer": "^24.20.0"
  },
  "engines": {
    "node": ">=18"
  }
}
